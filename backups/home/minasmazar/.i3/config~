          background $bcolor
          statusline #ffffff
          separator #F6336F
  
          focused_workspace  #4c7899 #285577 $fcolor
          active_workspace   #333333 #5f676a #FFFF00
          inactive_workspace #333333 #222222 #FFFF00
          urgent_workspace   #2f343a #900000 #ffffff
        }

        # Syntax
        # mode <dock|hide|invisible>
        # hidden_state <hide|show>
        # modifier <Modifier>
        mode dock
        hidden_state hide
        modifier Mod4
}


