# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+Escape exec killall i3-nagbar

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym ograve resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

mode "LAUNCH" {
  bindsym f exec thunar, mode "default"
  bindsym Shift+f workspace number "100: file", exec thunar, mode "default"
  bindsym o exec opera, mode "default"
  bindsym r exec chromium-browser, mode "default"
  bindsym k exec gkrellm, mode "default"
  bindsym j exec jedit, mode "default"
  bindsym e exec gvim, mode "default"
  bindsym t exec totem, mode "default"
  bindsym v $term_exec gvim, mode "default"
  bindsym m $term_exec mc, mode "default"
  bindsym Shift+m workspace number "100: file", $term_exec mc, mode "default"
  bindsym x $term_exec alsamixer, mode "default"
  bindsym c exec gvim ~/.i3/config, mode "default"

  bindsym b $term_exec rvm default do bifrost pry, mode "default"

  bindsym s exec i3-sensible-terminal -e rvm default exec skynet pry `dmenu -b` --config .skynet-config.yaml, mode "default"

  bindsym Shift+s exec i3-sensible-terminal -e rvm default exec skynet rattack 11 `dmenu -b` --config .skynet-config.yaml, mode "default"

  bindsym y exec exec i3-sensible-terminal -e rvm default exec bifrost ytdl `dmenu -b`, mode "default"

  bindsym F7  $term_exec rvm default exec cappuccino, $term_exec rvm default exec cappuccino, mode "default"

  bindsym F6  exec i3-sensible-terminal -e rvm default exec skynet rattack 9 S126_IT --config .skynet-config.yaml, exec i3-sensible-terminal -e rvm default exec skynet rattack 9 S114_IT --config .skynet-config.yaml, exec i3-sensible-terminal -e rvm default exec skynet rattack 9 S133_IT --config .skynet-config.yaml, mode "default"

  bindsym F2  workspace $ws_www, layout tabbed, exec opera, exec chromium-browser, mode "default"
  bindsym F3  workspace $ws_media, layout stacking, $term_exec alsamixer, exec audacious,  mode "default"
  bindsym F4  workspace $ws_fm, $term_exec mc, exec i3-sensible-terminal, $term_exec mc, mode "default"

  bindsym F11 $term_exec rvm default do skynet rattack 11 S126_IT --config ~/.skynet-config.yaml, $term_exec rvm default do skynet rattack 11 S133_IT --config ~/.skynet-config.yaml

  bindsym F12 exec xrandr --auto, exec  sleep 1 && xrandr --output VGA1 --right-of LVDS1, mode "default"

  bindsym Escape mode "default"
  bindsym $mod+m mode "default"
}

mode "i3rb" {
  bindsym i $term_exec rvm default do i3rb pry, mode "default"
  bindsym w exec i3-msg workspace `dmenu -b`, mode "default"

  bindsym h exec xmessage workspace handler, mode "default"
  bindsym Escape mode "default"
  bindsym $mod+i mode "default"
}

bindsym $mod+i    mode "i3rb"
bindsym $mod+r    mode "resize"
bindsym $mod+m    mode "LAUNCH"

